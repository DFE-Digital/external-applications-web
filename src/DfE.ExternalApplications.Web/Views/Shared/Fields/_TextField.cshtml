@using Microsoft.AspNetCore.Html;
@model DfE.ExternalApplications.Web.Services.FieldViewModel
@{
    var isRequired = Model.Field.Required ?? true;
    var validationAttributes = new HtmlString(Model.ValidationAttributes);
    var labelClasses = Model.Field.Label.IsPageHeading ? "govuk-label--l" : "";
}

<govuk-input id="@Model.Id"
             name="Data[@Model.Field.FieldId]"
             value="@Model.CurrentValue">
            <govuk-input-label is-page-heading="@Model.Field.Label.IsPageHeading"
                               class="@(Model.Field.Label.IsPageHeading ? "govuk-label--l" : "")">
                @Model.Field.Label.Value
            </govuk-input-label>
            <govuk-input-hint>
                @Model.Field.Tooltip
            </govuk-input-hint>
            @if (Model.ErrorMessage != String.Empty)
            {
                <govuk-input-error-message>@Model.ErrorMessage</govuk-input-error-message>
            }
</govuk-input>