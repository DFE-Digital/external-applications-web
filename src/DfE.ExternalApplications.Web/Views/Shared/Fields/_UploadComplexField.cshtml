@using DfE.ExternalApplications.Web.Services
@using DfE.ExternalApplications.Application.Interfaces
@using DfE.CoreLibs.Contracts.ExternalApplications.Models.Response
@inject IFileUploadService FileUploadService
@model FieldViewModel
@{
    var applicationId = ViewContext.RouteData.Values["applicationId"]?.ToString();
    var fieldId = Model.Field.FieldId;
    var files = ViewData[$"{fieldId}_Files"] as IReadOnlyList<UploadDto> ?? new List<UploadDto>();
    var successMessage = ViewData[$"{fieldId}_UploadSuccess"] as string;
    var errorMessage = ViewData[$"{fieldId}_UploadError"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">Success</h2>
        </div>
        <div class="govuk-notification-banner__content">
            <p class="govuk-notification-banner__heading">@successMessage</p>
        </div>
    </div>
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="govuk-error-summary" data-module="govuk-error-summary">
        <div role="alert">
            <h2 class="govuk-error-summary__title">There is a problem</h2>
            <div class="govuk-error-summary__body">
                <p class="govuk-body">@errorMessage</p>
            </div>
        </div>
    </div>
}
<form method="post" enctype="multipart/form-data" asp-route-applicationId="@applicationId" asp-page-handler="UploadFile" class="upload-form" onsubmit="this.querySelector('button[type=submit]').disabled=true;this.querySelector('button[type=submit]').innerText='Uploading, please wait...';">
    <div class="govuk-form-group">
        <label class="govuk-label" for="@fieldId-upload-file">File</label>
        <input class="govuk-file-upload" id="@fieldId-upload-file" name="UploadFile" type="file" required />
    </div>
    <div class="govuk-form-group">
        <label class="govuk-label" for="@fieldId-upload-name">Name</label>
        <input class="govuk-input" id="@fieldId-upload-name" name="UploadName" type="text" placeholder="File name (optional)" />
    </div>
    <div class="govuk-form-group">
        <label class="govuk-label" for="@fieldId-upload-desc">Description</label>
        <input class="govuk-input" id="@fieldId-upload-desc" name="UploadDescription" type="text" placeholder="Description (optional)" />
    </div>
    <button class="govuk-button" type="submit">Upload</button>
</form>
@if (files.Any())
{
    <h3 class="govuk-heading-m">Uploaded files</h3>
    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th class="govuk-table__header">File name</th>
                <th class="govuk-table__header">Description</th>
                <th class="govuk-table__header">Uploaded by</th>
                <th class="govuk-table__header">Uploaded on</th>
                <th class="govuk-table__header">Actions</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
        @foreach (var file in files)
        {
            <tr class="govuk-table__row">
                <td class="govuk-table__cell">@file.OriginalFileName</td>
                <td class="govuk-table__cell">@file.Description</td>
                <td class="govuk-table__cell">@file.UploadedByUser?.Name</td>
                <td class="govuk-table__cell">@file.UploadedOn.ToString("g")</td>
                <td class="govuk-table__cell">
                    <form method="post" asp-route-applicationId="@applicationId" asp-page-handler="DownloadFile" style="display:inline">
                        <input type="hidden" name="FileId" value="@file.Id" />
                        <button class="govuk-link" type="submit">Download</button>
                    </form>
                    <form method="post" asp-route-applicationId="@applicationId" asp-page-handler="DeleteFile" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this file?');">
                        <input type="hidden" name="FileId" value="@file.Id" />
                        <button class="govuk-link govuk-link--destructive" type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
} 