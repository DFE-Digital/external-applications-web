@using Microsoft.AspNetCore.Html;
@model DfE.ExternalApplications.Web.Services.FieldViewModel
@{
    var isRequired = Model.Field.Required ? "true" : "false";
    var validationAttributes = new HtmlString(Model.ValidationAttributes);
    var labelClasses = Model.Field.Label.IsPageHeading ? "govuk-label--l" : "";
}

<govuk-error-message for="@Model.Id">@Model.ErrorMessage</govuk-error-message>
<govuk-textarea
             id="@Model.Id"
             name="Data[@Model.Field.FieldId]"
             value="@Model.CurrentValue">
     <govuk-textarea-label is-page-heading="@Model.Field.Label.IsPageHeading" class="@labelClasses">@Model.Field.Label.Value</govuk-textarea-label>
     <govuk-textarea-hint>@Model.Field.Tooltip</govuk-textarea-hint>
     <govuk-textarea-value>@Model.CurrentValue</govuk-textarea-value>
</govuk-textarea>

